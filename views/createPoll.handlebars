<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2 class="page-header">Create New Polls</h2>
      <form method="POST" action="/create/{{user.githubId}}">
    <div class="form-group">
        <label>Name of the Poll</label>
        <input type="text" class="form-control" name="pollName" placeholder="Name">
    </div>
    
    <div class="form-group">
        <label>Options: (seperated by comma ',' no space allowed between options)</label>
        <textarea class="form-control" rows="3" name="options" placeholder= "Separated by comma ',' "></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    </form>
    </div>
</div>